[ 
  { 
    "name": "app",
    "image": "${image}",
    "essential": true,
    "logConfiguration": { 
        "logDriver": "awslogs",
        "options": { 
          "awslogs-group" : "tech-assessment-fullstack-api",
          "awslogs-region": "us-east-2",
          "awslogs-stream-prefix": "ecs"
        }
    },
    "portMappings": [ 
        { 
          "containerPort": 80,
          "protocol": "tcp"
        }
    ],
    "healthCheck": {
      "command": [ "CMD-SHELL", "curl -f http://localhost || exit 1" ]
    }
  }
]